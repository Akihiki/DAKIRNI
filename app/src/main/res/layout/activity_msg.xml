<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MsgActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@drawable/ic_wave">

            <TextView
                android:id="@+id/label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:text="Msg Label : "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/context4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Msg Content : "
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/label44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Msg Audio : "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/playaudio"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/play_recording" />

            <ImageView
                android:id="@+id/stopaudio"
                android:layout_width="90dp"
                android:layout_height="80dp"

                android:layout_marginRight="30dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/stop_recording" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>